<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    android:padding="20dp"

    android:id="@+id/fmChangePassword"
    tools:context=".Fragments.ChangePassWord">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Đổi mật khẩu"

      android:fontFamily="@font/quicksand_medium"
      android:gravity="center"
      android:textColor="#ED1919"
      android:textSize="24dp"
      android:textStyle="bold"
      />
  <androidx.cardview.widget.CardView
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      app:cardCornerRadius="5dp"
      android:layout_margin="10dp"
      android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:layout_marginLeft="10dp"
          android:fontFamily="@font/quicksand_medium"
          android:text="Mật khẩu hiện tại"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:textSize="16dp" />

      <EditText
          android:id="@+id/txtUserPassword"
          android:layout_marginLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_gravity="center"
          android:gravity="center_vertical"
          android:textSize="18dp"
          android:inputType="textPassword"
          android:hint="**********"
          />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      app:cardCornerRadius="5dp"
      android:layout_margin="10dp"
      android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:layout_marginLeft="10dp"
          android:textSize="16dp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:fontFamily="@font/quicksand_medium"
          android:text="Mật khẩu mới"/>

      <EditText
          android:id="@+id/txtNewPassword"
          android:layout_marginLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_gravity="center"
          android:gravity="center_vertical"
          android:textSize="18dp"
          android:inputType="textPassword"
          android:hint="**********"
          />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      app:cardCornerRadius="5dp"
      android:layout_margin="10dp"
      android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:layout_marginLeft="10dp"
          android:textSize="16dp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:fontFamily="@font/quicksand_medium"
          android:text="Nhắc lại mật khẩu"/>

      <EditText
          android:id="@+id/txtcheckPassword"
          android:layout_marginLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_gravity="center"
          android:gravity="center_vertical"
          android:textSize="18dp"
          android:inputType="textPassword"
          android:hint="**********"
          />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btUpdatePW"
      android:layout_width="140dp"
      android:layout_height="40dp"
      android:text="Cập nhật"
      android:textColor="@color/white"
      android:textSize="16dp"
      android:layout_marginTop="20dp"
      android:layout_gravity="center"
      android:background="@drawable/custom_buttom"/>
</LinearLayout>